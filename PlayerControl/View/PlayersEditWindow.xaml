<mah:MetroWindow
	x:Class="PlayerControl.View.PlayersEditWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="clr-namespace:Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:dd="urn:gong-wpf-dragdrop"
	xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
	xmlns:ri="clr-namespace:Reactive.Bindings.Interactivity;assembly=ReactiveProperty.WPF"
	Title="本日のプレイヤー"
	Width="540"
	Height="480"
	MinWidth="420"
	MinHeight="320"
	BorderThickness="1"
	IsWindowDraggable="True"
	SaveWindowPosition="True"
	ShowMaxRestoreButton="False"
	ShowMinButton="False"
	TitleCharacterCasing="Normal"
	Topmost="True"
	mc:Ignorable="d">

	<mah:MetroWindow.Resources>
		<converters:ObjectMatchVisibilityConverter x:Key="ObjectMatchVisibilityConverter" />
	</mah:MetroWindow.Resources>

	<Grid x:Name="LayoutRoot" FocusManager.FocusedElement="{Binding ElementName=AddPlayerName}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!--#region ツールグリッド TODO:機能実装-->
		<Grid x:Name="ToolGrid" Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.Resources>
				<Style BasedOn="{StaticResource MaterialDesignOutlinedLightButton}" TargetType="{x:Type Button}">
					<Setter Property="Margin" Value="5,0" />
				</Style>
			</Grid.Resources>
			<Label
				VerticalAlignment="Stretch"
				VerticalContentAlignment="Center"
				Content="追加プレイヤー名："
				FontSize="14" />
			<TextBox
				x:Name="AddPlayerName"
				Grid.Column="1"
				VerticalAlignment="Stretch" />
			<Button
				Grid.Column="2"
				Padding="10,0"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				ToolTip="プレイヤーを追加">
				<StackPanel Orientation="Horizontal">
					<md:PackIcon
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Kind="AccountPlus" />
					<TextBlock Margin="5,0,0,0" Text="追加" />
				</StackPanel>
			</Button>
		</Grid>
		<!--#endregion-->

		<!--#region プレイヤーコントロールグループ-->

		<!--  プレイヤー一覧  -->
		<!--  ※覚書： https://mvrck.jp/documents/dotnet/wpf/itemscontrol-template/  -->
		<ListBox
			x:Name="PlayersListBox"
			Grid.Row="1"
			Margin="5"
			HorizontalContentAlignment="Stretch"
			VerticalContentAlignment="Center"
			dd:DragDrop.DropScrollingMode="VerticalOnly"
			dd:DragDrop.IsDragSource="True"
			dd:DragDrop.IsDropTarget="True"
			dd:DragDrop.MinimumVerticalDragDistance="1"
			dd:DragDrop.ShowAlwaysDropTargetAdorner="True"
			dd:DragDrop.UseDefaultDragAdorner="True"
			AlternationCount="2"
			BorderBrush="{StaticResource MahApps.Brushes.Gray7}"
			BorderThickness="1"
			ItemsSource="{Binding Players}"
			Style="{StaticResource MaterialDesignCardsListBox}">

			<!--  ItemsPanelテンプレート（垂直スタックパネル）  -->
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel>
						<i:Interaction.Behaviors>
							<i:FluidMoveBehavior AppliesTo="Children" Duration="0:0:0.2">
								<i:FluidMoveBehavior.EaseY>
									<PowerEase EasingMode="EaseInOut" />
								</i:FluidMoveBehavior.EaseY>
							</i:FluidMoveBehavior>
						</i:Interaction.Behaviors>
					</StackPanel>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>

			<!--  アイテムテンプレート  -->
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Grid x:Name="ItemGrid" Margin="0,5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>
						<!--  プレイヤー名文字  -->
						<Label
							x:Name="PlayerNameLabel"
							Grid.Column="1"
							HorizontalContentAlignment="Left"
							VerticalContentAlignment="Center"
							Content="{Binding Name.Value}"
							FontSize="18"
							FontWeight="Bold"
							Foreground="Black" />


						<!--  プレイヤー削除コントロール  -->
						<Button
							x:Name="PlayerRemoveButton"
							Padding="0"
							Style="{StaticResource MaterialDesignFlatLightButton}">
							<i:Interaction.Triggers>
								<i:EventTrigger EventName="Click">
									<ri:EventToReactiveCommand Command="{Binding DataContext.RemovePlayerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" />
								</i:EventTrigger>
							</i:Interaction.Triggers>
							<md:PackIcon
								Width="28"
								Height="28"
								Kind="SelectRemove" />
						</Button>
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<!--#endregion-->

		<!--  各種設定ダイアログ（種類の数だけIdentifierを変えて列挙:Viewはコマンド実行元で設定する）  -->
		<!--  参考：http://nineworks2.blog.fc2.com/blog-entry-117.html  -->
		<materialDesign:DialogHost
			Grid.RowSpan="5"
			d:IsHidden="True"
			CloseOnClickAway="False"
			Identifier="MainWindowDialog" />
	</Grid>
</mah:MetroWindow>
